---
import { Header } from "../components/ui/Header"
import { NewDrop } from "../components/ui/NewDrop"
import Footer from "../components/ui/Footer.astro"
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <script
    is:inline
    src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
  ></script>
  <script
    is:inline
    src="https://flackr.github.io/scroll-timeline/dist/scroll-timeline.js"
  ></script>
  <body class="flex justify-center items-center overflow-x-hidden">
    <div
      class="relative flex min-w-full min-h-screen flex-col bg-slate-50 justify-center items-center"
    >
      <Header client:visible />
      <NewDrop />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Voga";
    src: url("/fonts/Voga-Medium.otf");
    font: optional;
  }

  html {
    scroll-behavior: smooth;
  }
  .card {
    animation: appear linear;
    animation-timeline: view();
    animation-range: entry 0% cover 10%;
    position: relative;
  }

  .cilca {
    position: sticky;
    display: flex;
    top: 0;
    left: 0;
    animation: navbar-blur linear both;
    animation-timeline: scroll(root block);
    animation-range: 0 cover 200px;
  }
  .list {
    width: fit-content;
  }
  .item {
    animation: infinite-scroll 20s linear infinite both;
  }
  @keyframes infinite-scroll {
    from {
    }
    to {
      transform: translateX(calc(-50% - 0.5rem));
    }
  }
  @keyframes appear {
    from {
      opacity: 0;
      scale: 0.5;
    }
    to {
      opacity: 1;
      scale: 1;
    }
  }

  @keyframes navbar-blur {
    to {
      background-color: rgba(255, 255, 255, 0.4);
      backdrop-filter: blur(8px);
    }
  }
</style>
